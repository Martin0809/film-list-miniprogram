/* components/movie-card/movie-card.wxss */
.movie-card {
  overflow: hidden;
}

.movie-card__content {
  display: flex;
  margin: 56rpx 48rpx 48rpx;
  padding: 32rpx;
  background: var(--black-light);
  box-shadow: 0 8rpx 40rpx 0 rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
}

.movie-card__content > image {
  flex: none;
  margin-top: -88rpx;
  width: 160rpx;
  height: 224rpx;
  border-radius: 6rpx;
}

.movie-card__info {
  flex: auto;
  margin-left: 32rpx;
  width: 0;
  font-size: 32rpx;
  line-height: 1.5;
}

.movie-card__info view {
  display: flex;
}

.movie-card__info view text {
  flex: 1;
  margin-right: 16rpx;
  /* width: 100%; */
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.movie-card__info view button {
  padding: 0;
  width: 48rpx;
  height: 48rpx;
  min-height: 48rpx;
  background: transparent;
}

.movie-card__info view image {
  width: 48rpx;
  height: 48rpx;
}

.movie-card__info > text {
  display: -webkit-box;
  margin-top: 16rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  color: var(--grey);
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
