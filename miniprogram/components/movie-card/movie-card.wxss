/* components/movie-card/movie-card.wxss */
.movie-list-card {
  overflow: hidden;
}

.movie-list-card__content {
  display: flex;
  margin: 56rpx 48rpx 48rpx;
  padding: 32rpx;
  background: var(--black-light);
  box-shadow: 0 8rpx 40rpx 0 rgba(0, 0, 0, 0.08);
  border-radius: 16rpx;
}

.movie-list-card image {
  flex: none;
  margin-top: -88rpx;
  width: 160rpx;
  height: 224rpx;
  border-radius: 6rpx;
}

.movie-list-card__info {
  flex: auto;
  margin-left: 32rpx;
  width: 0;
  font-size: 32rpx;
  line-height: 1.5;
}

.movie-list-card__info text:first-child {
  display: inline-block;
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.movie-list-card__info text:last-child {
  display: -webkit-box;
  margin-top: 16rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  color: var(--grey);
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
