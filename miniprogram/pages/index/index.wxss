/* miniprogram/pages/index/index.wxss */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px;
  border-bottom: var(--border);
}

.header__title {
  font-size: 40rpx;
  font-weight: bold;
}

.header__avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
}

.banner {
  margin-top: 40rpx;
}

.banner image {
  padding: 0 10rpx;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.film-list {
  margin-top: 40rpx;
}

.film-list__title {
  display: block;
  padding: 20rpx;
  font-size: 32rpx;
  border-bottom: var(--border);
}
