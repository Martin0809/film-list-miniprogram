/* pages/cast/cast.wxss */
.cast__banner {
  position: relative;
  height: 800rpx;
  background-size: cover;
  background-position: top center;
}

.cast__banner-shadow {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    180deg,
    rgba(30, 30, 36, 0) 0%,
    rgba(30, 30, 36, 1) 100%
  );
}

.cast__info {
  position: relative;
  margin-top: -32rpx;
  z-index: 1;
}

.cast__info > text {
  display: block;
  padding: 0 64rpx;
  font-size: 48rpx;
  font-weight: bold;
  line-height: 64rpx;
}

.cast__info > text + text {
  margin-top: 8rpx;
}

.cast__movies,
.cast__photos {
  display: inline-block;
  padding: 0 64rpx;
}

.cast__movie {
  display: inline-block;
  vertical-align: top;
}

.cast__movie + .cast__movie {
  margin-left: 32rpx;
}

.cast__movie image {
  display: block;
  width: 160rpx;
  height: 212rpx;
  border-radius: 8rpx;
}

.cast__movie text {
  display: block;
  margin-top: 16rpx;
  width: 160rpx;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.cast__movie text:nth-of-type(2) {
  margin-top: 8rpx;
  color: var(--grey);
}

.cast__photos view {
  display: inline-block;
  width: 180rpx;
  height: 240rpx;
  border-radius: 8rpx;
  background-size: cover;
  background-position: center;
  overflow: hidden;
}

.cast__photos view + view {
  margin-left: 8rpx;
}

.cast__placeholder {
  height: 80rpx;
}
